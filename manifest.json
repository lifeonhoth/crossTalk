{
  "manifest_version": 2,

  "name": "crossTalk",
  "icons": {
    "128": "icon128.png"
  },

  "description": "Obfuscates a user's linguistic identity by searching random words and phrases in a variety of languages.",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    //"default_popup": "popup.html",
    "default_title": "crossTalk"
  },

  // "page_action":{

  //   },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },


  "permissions": [
